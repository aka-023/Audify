{
  "manifest_version": 3,
  "name": "Audify",
  "version": "2.0",
  "description": "Analyzes screen content using Gemini.",
  "icons": {
    "16":"icons/logo-2.png",
    "32":"icons/logo-2.png",
    "48":"icons/logo-2.png",
    "128": "icons/logo-2.png"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "microphone",
    "audioCapture",
    "commands",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "main/sidepanel.html"
  },
  "options_page": "option/options.html",
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Audify to your service !!"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "toggle-api-mode": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "Toggle between local and cloud AI"
    },
    "toggle-voice-input": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "Alt+2"
      },
      "description": "Toggle voice input for chat"
    },
    "toggle-repeat": {
      "suggested_key": {
        "default": "Alt+3",
        "mac": "Alt+3"
      },
      "description": "Repeat last AI response"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Open Extension"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "permission/permissionContent.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "permission/permission.html",
        "permission/requestPermission.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}